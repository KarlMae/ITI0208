<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.dao.ExerciseMapper">

    <select id="fetchAll" resultType="com.training.dto.ExerciseDto">
        SELECT * FROM training.exercises;
    </select>

    <insert id="insertExercise">
        INSERT INTO
            training.exercises(name, description)
        VALUES
            (#{name}, #{description})
    </insert>

    <select id="fetchById">
        SELECT * FROM training.exercises WHERE id = #{id}
    </select>

    <select id="fetchByWorkoutId" parameterType="int" resultType="com.training.dto.ExerciseDto">
        SELECT
            *
        FROM
            training.workout_exercises t1
        LEFT JOIN
            training.exercises t2
        ON
            t2.id = t1.exercise_id
        WHERE
            workout_id = #{id}
    </select>

</mapper>