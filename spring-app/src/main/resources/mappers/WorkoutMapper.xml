<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.dao.WorkoutMapper">
    <select id="fetchAll" resultType="hashmap">
      SELECT
        *
      FROM
        training.workouts
    </select>

    <select id="fetchById">
      SELECT * FROM training.workouts WHERE id = #{id}
    </select>
</mapper>