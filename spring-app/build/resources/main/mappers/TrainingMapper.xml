<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.dao.TrainingMapper">
    <select id="fetchAll" resultType="hashmap">
      SELECT * FROM training.workouts;
    </select>

    <insert id="insertTraining">
        INSERT INTO training.workouts (id, name, description)
        VALUES (#{id}, #{name}, #{description})
    </insert>
</mapper>